#include<bits/stdc++.h>

using namespace std;


int main()
{
	int tc;
	cin>>tc;
	for(int tt=1; tt<=tc; tt++)
	{
		int n;
		cin>>n;
		
			string s;
			cin>>s;
			int p=0;
			//int l = s.size();
			for(int i=0; i<n; i++)
			{
				if(s[i]=='.')
                {
                    p++;
                    i+=2;
                }
                
			}
        cout<<"Case "<<tt<<": ";
   
		cout<<p<<endl;
		    
	}
	return 0;
}
